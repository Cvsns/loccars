<%= form_for [ @car, @car.bookings.build ] do |f| %>
  <div class="form-group">
    <%= f.label :starts_at %>
    <%= f.text_field :starts_at, class: "form-control", id: "booking_starts_at" %>
  </div>
  <div class="form-group">
    <%= f.label :ends_at %>
    <%= f.text_field :ends_at, class: "form-control", id: "booking_ends_at" %>
  </div>
  <%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>

<%= javascript_tag do %>
  document.addEventListener("DOMContentLoaded", function() {
    flatpickr("#booking_starts_at", {
      enableTime: false,
      dateFormat: "Y-m-d"
    });
    flatpickr("#booking_ends_at", {
      enableTime: false,
      dateFormat: "Y-m-d"
    });
  });
<% end %>
